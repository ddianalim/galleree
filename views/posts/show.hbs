<div class="container">

  <div class="show-post">
    <img class="show-pic" src={{post.picUrl}}>
    <h2 class="show-title">{{post.title}}</h2>
    <p class="show-date">{{post.date}}</p>
    <p class="show-description">{{post.description}}</p>
  </div>

  <div>
    <a class="button" id="back-button" href="/posts/">Back</a>
  </div>

  <div>
    <a class="button" href="/posts/{{post.id}}/edit">Edit</a>
  </div>

  <form method="POST" action="/posts/{{post._id}}?_method=DELETE">
     <button type="submit" id="delete-post" Onclick="return confirm('Are you sure you want to delete this project?');">Delete</button>
   </form>
</div>
