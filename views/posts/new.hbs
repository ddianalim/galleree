<div>
  <form action="/posts" method="post">
    <legend>New Project</legend>

    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" name="title" class="form-control" id="post-title" placeholder="Title">
    </div>

    <div class="form-group">
      <label for="post-title">Image</label>
      <input type="file" name="photos">
    </div>

    <div class="form-group">
      <label for="post-description">Description</label>
      <textarea type="text" name="description" class="form-control" id="post-description" placeholder="Describe your project...">
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
